<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
         <link rel="stylesheet" href="/stylesheets/style4.css">
    </head>
    <body>
        <div class="main">
         <div class="w-full px-10 py-1.5 flex justify-between bg-black text-white">
             <img class="hover:scale-[1.25]"
                 src="https://imgs.search.brave.com/hkArTvo0jBpPoHXNhOn2O1JQ_PdqibLgc6tAHHjf4Uw/rs:fit:860:0:0/g:ce/aHR0cHM6Ly91cGxv/YWQud2lraW1lZGlh/Lm9yZy93aWtpcGVk/aWEvY29tbW9ucy8z/LzM1L1BpbnRlcmVz/dF9Mb2dvLnN2Zw.svg"
             width="100px">
             <div class="flex gap-10 items-center font-semibold">
                 <div class="hover:text-red-600 text-lg"><a href="/profile">Profile</a></div><a class="hover:text-red-600 text-lg"
                     href="/feed">Feed</a><a
                     class="hover:scale-[1.25] px-3 py-1 bg-red-700 text-white rounded-lg"
                     href="/logout">Logout</a>
             </div>
         </div>
        <div
            class="profile w-full min-h-screen bg-zinc-800
            bg-[url('https://envato-shoebox-0.imgix.net/07de/4d52-e197-4442-aa23-6f9b305efd64/28-06-22-4.jpg?auto=compress%2Cformat&mark=https%3A%2F%2Felements-assets.envato.com%2Fstatic%2Fwatermark2.png&w=1000&fit=max&markalign=center%2Cmiddle&markalpha=18&s=bddbd6846cbcf7b60b2c3507289f06d5')]
            text-white">
            <div class="profdet  ">
                <form id="upload" hidden action="/fileupload" method="post" enctype="multipart/form-data">
                    <input type="file" name="image">
                </form>
                <div class="relative flex flex-col items-center text-center ">
                    <span id="uploadicon"class="cursor-pointer p-1 absolute top-[16vh] left-[51vw] rounded-full bg-zinc-100 ">
                        <img src="/images/pin/pencil.png" width="25px">
                    </span>
                 <div class="w-32 h-32 bg-zinc-100 rounded-full overflow-hidden mt-1">
                     <img class="w-full h-full object-cover"
                    src="/images/uploads/<%=user?.profileImage %>">
                 </div>
                    <h1 class=" text-3xl font-semibold text-centre"><%=user?.name %></h1>
                    <h3 class="text-md text-centre">@<%=user.username %></h3>
                    <a href="/edit" class="mt-2 px-5 py-1 bg-zinc-700 rounded-full text-1xl font-semibold text-zinc-100">Edit</a>
                    <a href="/add" class="px-3 py-1 rounded-lg bg-red-700 text-base font-semibold mt-2">Add post</a>
            </div>
            </div>
            <div class="cards flex flex-wrap gap-5 px-10 mt-10">
                <div id="card" class="card text-center bg-zinc-200 text-black rounded-lg">
                <div class="w-52 h-40  rounded-lg text-centre overflow-hidden">
                    <img class="w-full h-full object-cover overflow-hidden"
                        src="./images/uploads/<%= user?.posts[0]?.postimage %>">
                </div>
                <a id="link" href="/show/posts" class="text-1xl font-semibold mt-5 hover:text-blue">All Pins</a>
                <h5 class="text-xl font-medium"><%=user.posts.length %>Pins</h5>
                </div>
            </div>
        </div>
        </div>
     <script>
document.querySelector("#uploadicon").addEventListener("click",function(){
    document.querySelector("#upload input").click();
})
document.querySelector("#upload input").addEventListener("change",function(){
    document.querySelector("#upload").submit();
})
document.querySelector("#card").addEventListener("click",function(){
document.querySelector("#link").click();
})
     </script>
        
        <script src="https://cdn.tailwindcss.com" async defer></script>
    </body>
</html>